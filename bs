#!/usr/bin/make -f
CXX=clang++
CXXFLAGS=-I. -std=c++11 -Wall -Wextra -g -ggdb -O0

BUILD_DIRECTORY = ./build
CPP = $(wildcard components/*.cpp) \
	$(wildcard mechanics/*.cpp) \
	$(wildcard objects/*.cpp) \
	$(wildcard utilities/*.cpp)



.PHONY: clean
clean:
	rm -r $(BUILD_DIRECTORY)/ $(OBJ)
